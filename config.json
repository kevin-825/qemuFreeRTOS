{
  "build_dir": "build",
  "target_name": "my_project",
  "version": {
    "major": 1,
    "minor": 0,
    "build_number": 3
  },
  "features": {
    "debug": true,
    "optimization": "O2"
  },
  "architectures": {
    "arm64": {
      "toolchain": {
        "CC": "/path/to/aarch64-none-elf-gcc",
        "AS": "/path/to/aarch64-none-elf-as",
        "SIZE": "/path/to/aarch64-none-elf-size"
      },
      "cflags": "-O2 -mcpu=cortex-a72 -march=armv8-a -Wall -Wextra -MMD -MP -MF $(@:%.o=%.d)",
      "ldflags": "",
      "env": {
        "PATH": "/path/to/toolchain/bin:$PATH"
      }
    },
    "arm32": {
      "toolchain": {
        "CC": "/path/to/arm-none-eabi-gcc",
        "AS": "/path/to/arm-none-eabi-as",
        "SIZE": "/path/to/arm-none-eabi-size"
      },
      "cflags": "-O2 -mcpu=cortex-m4 -mthumb -Wall -Wextra -MMD -MP -MF $(@:%.o=%.d)",
      "ldflags": "",
      "env": {
        "PATH": "/path/to/toolchain/bin:$PATH"
      }
    },
    "riscv64": {
      "toolchain": {
        "CC": "/path/to/riscv64-unknown-elf-gcc",
        "AS": "/path/to/riscv64-unknown-elf-as",
        "SIZE": "/path/to/riscv64-unknown-elf-size"
      },
      "cflags": "-O2 -march=rv64imafdc -mabi=lp64d -Wall -Wextra -MMD -MP -MF $(@:%.o=%.d)",
      "ldflags": "",
      "env": {
        "PATH": "/path/to/toolchain/bin:$PATH"
      }
    },
    "riscv32": {
      "toolchain": {
        "CC": "/path/to/riscv32-unknown-elf-gcc",
        "AS": "/path/to/riscv32-unknown-elf-as",
        "SIZE": "/path/to/riscv32-unknown-elf-size"
      },
      "cflags": "-O2 -march=rv32imafc -mabi=ilp32 -Wall -Wextra -MMD -MP -MF $(@:%.o=%.d)",
      "ldflags": "",
      "env": {
        "PATH": "/path/to/toolchain/bin:$PATH"
      }
    },
    "local": {
      "toolchain": {
        "CC": "gcc",
        "AS": "as",
        "SIZE": "size"
      },
      "cflags": "-O2 -Wall -Wextra -MMD -MP -MF $(@:%.o=%.d)",
      "ldflags": "",
      "env": {
        "PATH": "/usr/local/bin:/usr/bin:/bin:$PATH"
      }
    }
  }
}
